{
  "workspace": [
    "./client",
    "./server"
  ],
  "tasks": {
    "fmt": "deno fmt && deno lint && deno check --allow-import=bunseki.kbn.one,jsr.io",
    "check": "deno fmt --check && deno lint && deno check --allow-import=bunseki.kbn.one,jsr.io",
    "dev": "deno serve -P --env --watch=client,server server/app.ts",
    "bundle": "deno run -P=bundle server/bundle.ts",
    "serve": "deno serve -P --env server/app.ts",
    "auth": "deno run -A --env server/auth.ts"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.6.15",
    "@remix-run/component": "npm:@remix-run/component@^0.4.0",
    "bunseki/": "https://bunseki.kbn.one/"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@remix-run/component"
  },
  "permissions": {
    "default": {
      "net": true,
      "read": ["./dist"],
      "env": {
        "allow": [
          "GOOGLE_DRIVE_ID",
          "GOOGLE_KEY",
          "GOOGLE_CLIENT_ID",
          "GOOGLE_CLIENT_SECRET",
          "GOOGLE_REFRESH_TOKEN"
        ],
        "ignore": true
      },
      "import": ["bunseki.kbn.one:443"]
    },
    "bundle": {
      "write": ["./dist"],
      "import": ["bunseki.kbn.one:443"]
    }
  },
  "unstable": [
    "bundle",
    "kv"
  ],
  "deploy": {
    "org": "kuboon-tokyo",
    "app": "gdrive-tree"
  }
}
